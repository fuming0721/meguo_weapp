<!--pages/money/aboutAlipay/aboutAlipay.wxml-->
<view class='aboutAlipayPage'>
  <view class='ali_inputItem'>
    <text class='ali_title'>真实姓名</text>
    <input class='ali_input' placeholder='请输入真实姓名' placeholder-class='pla_color' value='{{name}}' bindinput='nameInput'>
    </input>
    <icon class='iconfont jdd-cuox' hidden='{{!name.length}}'></icon>
  </view>

  <view class='ali_inputItem'>
    <text class='ali_title'>支付宝号</text>
    <input class='ali_input' placeholder='请输入真实姓名' placeholder-class='pla_color' value='{{alipayNum}}' bindinput='alipayNumInput'>
    </input>
    <icon class='iconfont jdd-cuox' hidden='{{!alipayNum.length}}'></icon>
  </view>

  <view class='ali_inputItem'>
    <text class='ali_title'>电话号码</text>
    <view class='mobileNum'>{{hide_mobile}}</view>
  </view>

  <view class='ali_inputItem'>
    <text class='ali_title'>验证码</text>
    <input class='ali_input' placeholder='请输入真实姓名' placeholder-class='pla_color' value='{{code}}' bindinput='codeInput'>
    </input>
    <icon class='iconfont jdd-cuox' hidden='{{!code.length}}'></icon>
    <button class='getCode' size='mini' type='primary' disabled='{{disabledGetCode}}'>获取验证码</button>
  </view>

  <button type='warn' class='submitBtn' disabled='{{!nameIsOk || !alipayNumIsOk|| !codeIsOk}}'>提交</button>
</view>