/* pages/inviteFriends/inviteFriends.wxss */
.inviteFriendsPage{
  padding-bottom: 120rpx;
}
.invite_title{
  height: 50rpx;
  background-color: #ffb809;
  font-size: 24rpx;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
}
.inviteImg{
  width: 400rpx;
  transition: all .4s;
}
.index_swiper{
  height: 870rpx;
  padding: 40rpx 0;
  background-color: #fff;
}
.bannerItem{
  width: 500rpx !important;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 40rpx;
}
.currentImg{
  transform: scale(1.2)
}
.invite_des{
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size: 24rpx;
  color: #666;
}
.invite_des_title{
  font-size: 28rpx;
  padding: 10rpx 0;
}
.bottom{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  padding: 10rpx 0;
  box-sizing: border-box;
}
.bottom button{
  height: 100%;
  width: 45%;
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}
.copy{
  background-color: #FFBB33;
  color: #333;
}
.share{
  background-color: #F23051;
  color: #fff;
}
.saveImgBox{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 100%;
  right: 0;
  left: 0;
  z-index: 9;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.saveImgPane{
  width: 100%;
  height: 75%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.saveImgBox-top{
  width: 100%;
  height: 70rpx;
  font-size: 26rpx;
  color: #666;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-color: #f2f2f2;
}
.jdd-cuo{
  font-weight: bolder;
}
.shareImg_main{
  flex-grow: 1;
  width: 750rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.current_share_img{
  height: 700rpx;
}
.share_info{
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-shrink: 0;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}
.save_img_btn{
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  line-height: 80rpx;
}
.share_info_w{
  padding: 20rpx;
}