/**index.wxss**/

.index {
  background-color: #f2f2f2;
}

.indextop {
  height: 80rpx;
  width: 100%;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  z-index: 9;
  background-color: #fff;
}

.index_swiper {
  height: 284rpx;
}

.bannerSwiper {
  width: 100%;
  margin-top: 80rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.bannerItem {
  border-radius: 8rpx;
  overflow: hidden;
  width: 100%;
  height: 284rpx;
}

.indexbannerimg {
  width: 100%;
  border-radius: 8rpx;
}

.menuNavList {
  width: 100%;
  height: 320rpx;
  padding: 0 10rpx 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.cheapList {
  margin-top: 5px;
  background-color: #fff;
  box-sizing: border-box;
}

.index_title {
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #666;
  text-align: center;
}

.cheapScroll {
  display: flex;
  justify-content: flex-start;
  box-sizing: border-box;
  height: 390rpx;
  padding: 0 20rpx;
  white-space: nowrap;
  width: 100%;
  flex-wrap: nowrap;
}

.homeCheapList_item {
  box-sizing: border-box;
  padding: 0 10rpx;
  width: 260rpx;
  display: inline-block;
}

.homeCheapList_item_img {
  border: 1px solid #f2f2f2;
  width: 240rpx;
  height: 240rpx !important;
  display: block;
  box-sizing: border-box;
}

.homeCheapList_item_title {
  font-size: 24rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  height: 68rpx;
  white-space: pre-wrap;
  overflow: hidden;
  line-height: 1.5;
  color: #333;
  margin: 10rpx 0 20rpx;
}

.homeCheapList_item_info {
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;
  box-sizing: border-box;
  font-size: 22rpx;
}

.seeMorebox {
  padding: 20rpx 0;
}

.seeMoreBtn {
  width: 200rpx;
  height: 40rpx;
  margin: 0 auto;
  font-size: 22rpx;
  text-align: center;
  line-height: 36rpx;
  border: 1px solid #dadada;
  color: #b8b8b8;
  box-sizing: border-box;
  border-radius: 40rpx;
}

.homeCheapList_item_price {
  color: #e53939;
}

.homeCheapList_item_volume {
  color: #666;
}

.editorSayList {
  background-color: #fff;
  margin-top: 10rpx;
}

.editorSay_swiper {
  box-sizing: border-box;
  height: 300rpx;
  padding: 0 15rpx;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.editorSayList_item {
  box-sizing: border-box;
  padding: 0 10rpx;
  display: inline-block;
  width: 524rpx;
}

.editorSayList_item_center {
  overflow: hidden;
  border-radius: 8rpx;
  height: 300rpx;
  position: relative;
  box-sizing: border-box;
  border: 1px solid #f2f2f2;
}

.editorSayList_item_img {
  max-width: 100%;
}

.editorSayList_item_title {
  height: 80rpx;
  width: 100%;
  bottom: 0;
  position: absolute;
  padding: 5rpx 20rpx;
  font-size: 22rpx;
  background-color: rgba(0, 0, 0, 0.4);
  color: #fff;
  box-sizing: border-box;
  border-radius: 0 0 8rpx 8rpx;
  white-space: pre-wrap;
}

.editorSayList_item_text {
  overflow: hidden;
  height: 70rpx;
  line-height: 35rpx;
}

.featuredList {
  margin-top: 10rpx;
  /* background-color: #fff; */
}

.index_goodList {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  background-color: #f2f2f2;
  padding: 0 14rpx;
  box-sizing: border-box;
}

.menuItem {
  width: 146rpx;
  height: 146rpx;
}
