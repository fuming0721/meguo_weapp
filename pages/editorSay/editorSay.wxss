/* pages/editorSay/editorSay.wxss */

.pageView {
  background-color: #f2f2f2;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.item_container {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.top {
  height: 120rpx;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.top_left {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.top_right{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  height: 80rpx;
  padding-top: 10rpx;
  box-sizing: border-box;
}

.userName{
  font-size: 26rpx;
  color: #333;
}
.createTime{
  font-size: 22rpx;
  color: #979797;
}
.item_content{
  padding: 0 20rpx;
  box-sizing: border-box;
}
.item_content_text{
  font-size: 26rpx;
}
.item_goods_list{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding: 20rpx 8rpx;
  box-sizing: border-box;
}
.goods_item{
  width: 228rpx;
  height: 228rpx;
  position: relative;
  margin: 8rpx;
  overflow: hidden;
}
.goods_item_img{
  width: 228rpx;
  height: 228rpx;
}
.goods_item_price{
  position: absolute;
  font-size: 22rpx;
  background-color: rgba(242,60,78,.8);
  color: #fff;
  height: 30rpx;
  padding-right: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  right: 0;
  bottom: 0;
}

.itemImg_swiper_container{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  transform: scale(0,0);
  background-color: rgba(0, 0, 0, 0.6);
}
.itemImg_swiper{
  width: 100%;
  height: 100%;
}
.slide-image{
  width: 100%;
  height: auto;
  padding: 40rpx;
  box-sizing: border-box;
}
.itemImg_swiper_item{
  display: flex;
  justify-content: center;
  align-items: center;
}
.closeSwiper{
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  width: 100rpx;
  height: 44rpx;
  font-size: 22rpx;
  padding: 0;
  line-height: 44rpx;
  box-sizing: border-box;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
}
.closeSwiper::after{
  border-color: #fff;
}
