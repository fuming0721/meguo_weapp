.cs_topBox {
  width: 750rpx;
  height: 640rpx;
  background-image: url('https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1533794902&di=e31427a636ab067e2ccd924fea7de1e0&imgtype=jpg&er=1&src=http%3A%2F%2Fp2.gexing.com%2FG1%2FM00%2FA3%2FD6%2FrBACE1PgXL2Tq-ZmAACLsCSNGLo828.jpg');
}

.cs_topBox_content_top {
  width: 100%;
  height: 440rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  flex-direction: column;
  font-size: 36rpx;
  position: relative;
}

.cs_topBox_content_top text {
  font-size: 48rpx;
}

.topBoxSubTitle {
  font-size: 24rpx;
}

.shopNav {
  width: 100%;
  height: 72rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.shopNavItem {
  width: 33%;
  text-align: center;
  color: #fff;
  height: 100%;
  line-height: 72rpx;
}

.shopNavItem_active {
  color: #333;
  background-image: url(data:image/png;base64,);
  background-position: inherit;
  background-size: cover;
}

.cs_topBox_bottom {
  background-color: rgba(255, 255, 255, 0.8);
  width: 100%;
  height: 200rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.cs_topBox_bottom_inputBox {
  width: 100%;
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  border: 4rpx solid #ffa6aa;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.cs_topBox_bottom_input {
  font-size: 26rpx;
  height: 100%;
  line-height: 80rpx;
  padding: 0 80rpx 0rpx 20rpx;
  color: #333;
  flex-grow: 1;
  background-color: #fff;
}

.inputHolder {
  font-size: 26rpx;
}

.searchBtn {
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  background-color: #ff9ab5;
  color: #fff;
  border-radius: 0;
}
.searchBtn:active{
  opacity: 0.8;
}

.delete{
  position: absolute;
  right: 160rpx;
  font-size: 26rpx;
  color: #000;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx !important;
  font-weight: bold;
  width: 80rpx;
  background-color: #fff;
  border: none;
  padding: 0;
}
.delete::after{
  border: none;
}

.cs_topBox_form{
  flex-grow: 1;
}
button[class="delete"]::after {
  border: 0;
} 
.menuItem{
    width: 187.5rpx;
    height: 187.5rpx;
}