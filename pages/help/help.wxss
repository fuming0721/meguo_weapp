/* pages/help/help.wxss */

page {
  height: 100%;
  border-top: 2rpx solid #ebebeb;
  box-sizing: border-box;
}

.helpPage {
  height: 100%;
  display: flex;
  justify-content: space-between;
}

.helpMenu {
  width: 200rpx;
  height: 100%;
}

.helpList {
  height: 100%;
  width: 550rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.menuItem {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  border-bottom: 2rpx solid #e2e2e2;
}

.menuItem::after {
  border: none;
}

.menuItem_icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  margin-bottom: 10rpx;
}

.menuItem_name {
  font-size: 26rpx;
}

.helpList_item {
  font-size: 28rpx;
  
}

.helpList_item_text {
  padding: 30rpx 0;
  border-bottom: 2rpx solid #ebebeb;
  margin: 0 40rpx;
}

.activeMelu::after {
  content: '';
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 40rpx 60rpx 40rpx 0;
  border-color: transparent #fff transparent transparent;
  position: absolute;
  left: 175rpx;
  top: 80rpx;
}
