/* pages/goldDetailList/goldDetailList.wxss */
.goldDetailListPage{
  padding: 60rpx 0 20rpx;
}
.nogoldDetail{
  height: 750rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 30rpx;
  color: #999;
}
.nogoldDetail image{
  width: 50%;
  margin-bottom: 40rpx;
}
.goldDetailItem{
  height: 140rpx;
  border-bottom: 2rpx solid #f2f2f2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  padding: 18rpx 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.item_top, .item_bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.item_title{
  font-size: 30rpx;
  overflow: hidden;
  flex-grow: 1;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.item_gold{
  color: #F23C4E;
  font-size: 30rpx;
  width: 120rpx;
  flex-shrink: 0;
  text-align: right;
}
.item_bottom_text{
  color: #999;
  font-size: 22rpx;
}
.datePicker{
  height: 60rpx;
  font-size:28rpx;
  color: #333;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 750rpx;
  position: fixed;
  background-color: #fff;
  top: 0;
  border-bottom: 2rpx solid #f2f2f2;
}
.datePicker .jdd-rili{
  font-size: 36rpx;
  margin-right: 20rpx;
}